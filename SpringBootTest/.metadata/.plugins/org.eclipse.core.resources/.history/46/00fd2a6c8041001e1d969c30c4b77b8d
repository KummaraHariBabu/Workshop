package org.jsp.springboottest.dao;

import java.util.List;
import java.util.Optional;

import org.jsp.springboottest.dto.Bike;
import org.jsp.springboottest.repository.BikeRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository
public class BikeDao {
	@Autowired
	private BikeRepository repository;
	
	public Bike saveBike(Bike bike) {
		return repository.save(bike);
	}
	public Bike updateBike(Bike bike) {
		return repository.save(bike);
	}
	public Optional<Bike> findById(int id) {
  		return repository.findById(id);
	}
 
	public void deleteBike(int id) {
 		 repository.deleteById(id);
	}
	public List<Bike> findAll() {
		return repository.findAll();
	}
	
	public Optional<Bike> verifyBike(String model,String name) {
		return repository.verifyBike(model, name);
	}

}
