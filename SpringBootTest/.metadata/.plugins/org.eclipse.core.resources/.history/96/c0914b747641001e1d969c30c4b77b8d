package org.jsp.springboottest.service;

import java.util.Optional;

import org.jsp.springboottest.dao.BikeDao;
import org.jsp.springboottest.dao.RideDao;
import org.jsp.springboottest.dto.Bike;
import org.jsp.springboottest.dto.ResponseStructure;
import org.jsp.springboottest.dto.Ride;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;

@Service
public class RideService {
	@Autowired
	private RideDao rDao;
	
	@Autowired
	private BikeDao bDao;
	
	public ResponseEntity<ResponseStructure<Ride>> saveRide(Ride ride, int bikde_id ) {
		Optional<Bike> bike = bDao.findById(bikde_id);
		ResponseStructure<Ride> str = new ResponseStructure<>();
		if(bike.isPresent()) {
			Bike b = bike.get();
			b.getRide().add(ride);
			ride.setBike(bike.get());
			bDao.updateBike(bike.get());
			rDao.saveRide(ride);
			str.setData(ride);
			str.setMessage("saved successfully");
			str.setStatuscode(HttpStatus.CREATED.value());
			return new ResponseEntity<ResponseStructure<Ride>>(str,HttpStatus.CREATED);
			
		}
	}

}
